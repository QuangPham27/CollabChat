<Window x:Class="CollabChatClient.MVVM.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollabChatClient.MVVM.View"
        xmlns:viewmodel="clr-namespace:CollabChatClient.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="Login" Height="600" Width="800">
    <Window.DataContext>
        <viewmodel:LoginViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- App logo -->
        <Image Grid.Row="0" Source="C:\Users\admin\source\repos\CollabChat\CollabChat\logo.png" Margin="10"/>

        <StackPanel Grid.Row="1" Margin="50">
            <!-- Email input -->
            <StackPanel Orientation="Horizontal" Margin="210 0 0 10" >
                <TextBlock Text="Email: " Margin="0 0 5 0"/>
                <TextBox x:Name="EmailInput" Width="200" Margin="12 0 0 0"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- Password input -->
            <StackPanel Orientation="Horizontal" Margin="200 0 0 10">
                <TextBlock Text="Password: " Margin="0 0 5 0"/>
                <TextBox x:Name="PasswordInput" Width="200"
                         Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- Login button -->
            <Button Content="Login" Width="100" Margin="0 0 0 10" Command="{Binding loginCommand}"/>
            <!-- Login message-->
            <TextBlock Text="{Binding Message, Mode=TwoWay}" Foreground="Red" />
            <!-- Create account button -->
            <Button Content="Create Account" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
